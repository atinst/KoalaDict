        <Image Source="Image/SearchBox.png" Margin="275,10,275,550"/>
        <TextBox Name="SearchBox" BorderBrush="Transparent" Style="{DynamicResource SearchBoxStyle}" VerticalContentAlignment="Center" FontSize="20" Margin="295,10,315,550" />
        

        <Button Name="MinBtn" Margin="780,0,80,575" Click="MinBtn_OnClick" Style="{StaticResource MinBtnStyle}"/>
        <Button Name="MaxBtn" Margin="820,0,40,575" Click="MaxBtn_OnClick" Style="{StaticResource MaxBtnStyle}"/>
        <Button Name="CloBtn" Margin="860,0,0,575" Click="CloBtn_OnClick" Style="{StaticResource CloBtnStyle}"/>

