<UserControl x:Class="KoalaDictDemo.Translate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KoalaDictDemo"
             mc:Ignorable="d" 
             d:DesignHeight="540" d:DesignWidth="760">
    <Grid Background="#F0F0F0">
        <TextBox Name="InBox" Text="请输入要翻译的俄文" FontSize="18" GotFocus="InBox_OnGotFocus" BorderBrush="#00A0E9" Margin="30,30,30,330"/>
        <TextBox Name="OutBox" Text="译文自动显示在这里" FontSize="18" BorderBrush="#00A0E9" IsReadOnly="True" Margin="30,330,30,30"/>
        <Button Name="TransBtn" Content="翻译" FontSize="18" Click="TransBtn_OnClick" Margin="560,255,100,255"/>

    </Grid>
</UserControl>
